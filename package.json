    "ios": "expo run:ios",
    "lint": "eslint ./app ./App.tsx && npm run compile",
    "lint:fix": "eslint --fix ./app ./App.tsx && npm run compile",
    "test": "npm run test-jest && npm run test-node",
    "test-jest": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --config jest.config.ts --runInBand --detectOpenHandles --forceExit",
